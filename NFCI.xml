<context>
  <panel label="NFCI"
         dxincr="1"
         backgroundcolor="LightYellow"
         frequency="months">

    <chart label="S&amp;P 500"
           ngridlines="24"
           span="60"
           scale="log">

      <series ref="SP500"/>
      <series ref="RC" color="LightCyan"/>
<!--
      <series ref="T10Y3M.inv" color="Yellow"/>
-->
    </chart>

    <chart label="Gross Domestic Product, YoY Percentage Change"
           ngridlines="18"
           span="25">

      <series ref="GDP.pc1"/>
