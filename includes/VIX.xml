<context>
  <panel label="VIX"
         dxincr="1"
         backgroundcolor="White"
         frequency="months">

    <chart label="S&amp;P 500"
           ngridlines="16"
           span="60"
           scale="log">

      <series ref="SP500"/>
      <series ref="RC" color="Orange"/>
      <series ref="VIXCLS.H" color="Yellow"/>
    </chart>

    <chart label="Gross Domestic Product, YoY Percentage Change"
           ngridlines="18"
           span="25">

      <series ref="GDP.pc1"/>
      <series ref="RC" color="Orange"/>
      <series ref="VIXCLS.H" color="Yellow"/>
    </chart>

    <chart label="CBOE Volatility Index: VIX"
           span="15"
           ngridlines="6">

      <series ref="VIXCLS" color="Red"/>
      <series ref="RC" color="Orange"/>
      <series ref="VIXCLS.H" color="Yellow"/>
    </chart>
  </panel>
</context>

