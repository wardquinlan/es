<context>
  <panel label="SAHM"
         dxincr="1"
         backgroundcolor="White"
         frequency="months">

    <chart label="S&amp;P 500"
           ngridlines="16"
           span="60"
           scale="log">

      <series ref="SP500"/>
      <series ref="RC" color="Cornsilk"/>
    </chart>

    <chart label="Gross Domestic Product, YoY Percentage Change"
           ngridlines="18"
           span="25">

      <series ref="GDP.pc1"/>
      <series ref="GDI.pc1" color="Red"/>
      <series ref="RC" color="Cornsilk"/>
    </chart>

    <chart label="Sahm Rule"
           span="15"
           ngridlines="2"
           gridlines="0.5">

      <series ref="SAHMREALTIME" color="Red"/>
      <series ref="RC" color="Cornsilk"/>
    </chart>
  </panel>
</context>

