<context>
  <panel label="S&amp;P 500"
         dxincr="1"
         backgroundcolor="White"
         frequency="months">

    <chart label="S&amp;P 500"
           span="40"
           ngridlines="16"
           scale="log">

      <series ref="SP500"/>
      <series ref="RC" color="LightCyan"/>
    </chart>

    <chart label="P/E"
           span="20"
           ngridlines="8">

      <series ref="SP500_PE" color="Red"/>
    </chart>

    <chart label="P/S"
           span="20"
           ngridlines="8">

      <series ref="SP500_PS" color="Red"/>
    </chart>

    <chart label="Market Cap to GDP"
           span="20"
           gridlines="135,150"
           ngridlines="8">

<!--
      <series ref="MKCAPGDP" color="Red"/>
-->
      <series ref="MKCAPGDP2" color="Green"/>
      <series ref="SP500GDP" color="Blue"/>
    </chart>
  </panel>
</context>

