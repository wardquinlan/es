<context>
  <panel label="PMI-NM"
         dxincr="1"
         backgroundcolor="White"
         frequency="months">

    <chart label="S&amp;P 500"
           ngridlines="16"
           span="60"
           scale="log">

      <series ref="SP500"/>
      <series ref="RC" color="Cornsilk"/>
    </chart>

    <chart label="Gross Domestic Product, YoY Percentage Change"
           ngridlines="18"
           span="25">

      <series ref="GDP.pc1"/>
      <series ref="RC" color="Cornsilk"/>
    </chart>

    <chart label="U.S. ISM Non-Manufacturing Purchasing Managers Index"
           span="15"
           gridlines="50"
           ngridlines="6">

      <series ref="PMI.NM" color="Red"/>
      <series ref="RC" color="Cornsilk"/>
    </chart>
  </panel>
</context>

